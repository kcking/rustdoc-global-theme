{
    "manifest_version": 2,
    "name": "Rustdoc Global Theme",
    "version": "1.0.2",
    "description": "Sets your rustdoc theme globally.",
    "permissions": [
        "*://doc.rustlang.org/*",
        "*://docs.rs/*",
        "file:///*",
        "*://localhost/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "Choose Theme",
        "default_popup": "popup.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{602ceb94-c0e7-45a1-91d1-eea8ced2de46}"
        }
    }
}